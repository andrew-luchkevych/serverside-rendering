{
	"version": "2.1.4",
	"compileOnSave": true,
	"compilerOptions": {
		"target": "es6",
		"module": "commonjs",
		"moduleResolution": "node",
		"allowSyntheticDefaultImports": true,
		"skipDefaultLibCheck": true,
		"experimentalDecorators": true,
		"jsx": "react",
		"allowJs": true,
		"checkJs": false,
		"sourceMap": true,
		// "noImplicitAny": true,
		// "noUnusedLocals": true,
		// "noUnusedParameters": true,
		// "strictNullChecks": true,
		"pretty": true,
		"downlevelIteration": true,
		"emitDecoratorMetadata": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"resolveJsonModule": true,
		"outDir": "dist",
		"rootDirs": [
			"src/client",
			"src/server",
			"config"
		],
		"preserveConstEnums": true,
		"removeComments": true,
		"importHelpers": false,
		"typeRoots": [
			"node_modules/json-d-ts",
			"node_modules/@types",
			"./types"
		],
	},
	"exclude": [
		"node_modules",
		"src/client/**/*.test.tsx",
		"src/server/**/*.test.tsx"
	],
	"include": [
		"src/**/*",
	],
	"files": [
		"./types/index.d.ts",
		"types/express-flash/index.d.ts",
		"types/react-loadable/webpack/index.d.ts"
	]
}